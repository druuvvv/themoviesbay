<body class="bg-dark">
  <nav class="navbar bg-black sticky-top">

    <div class="container-fluid">

      <a class="navbar-brand display-1 text-light align-middle d-inline" href="/">
        <img src="/resources/feature-img-min-1280x720.png" alt="Logo" width="120" height="72"
          class="d-inline-block align-text-middle">
        <h1 class="d-inline align-middle text-light">The Movies Bay</h1>
      </a>
      <form class="d-flex flex-nowrap input-group-sm" role="search" name="searchbar" method="GET">
        <input class="form-control me-2 display-1" name="searchbox" type="search" placeholder="Search" aria-label="Search">
        <button class="btn text-light" type="button" onclick="search(this.form)"
          style="background-color:#E50914 ; font-family: 'Bebas Neue',cursive ; font-size: larger;">
         Search
        </button>
      </form>
    </div>

  </nav>
   
   <div class="row">
    <div class="col">
    <h1 id="movieId" class="text-light text-align-center"></h1>
   <h5 id="movietag" class="text-light"></h5>
   <br><br><br>
   <h3 class="text-light">IMAGINE THIS PART IS FILLED WITH ALL THE INFO ABOUT THE MOVIE üôè</h3>
    </div>
    <div class="col">
        <img class="img-fluid" src="" alt="" id="postertag">
    </div>

    <div class="row"></div>
   </div>
   <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModale" id="modalbtn" style="display: none;">
    Launch demo modal
  </button>

<div class="modal fade modal-lg" id="exampleModale" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-dark" >
      <div class="modal-header modal-header-black" style="display:flex;align-items:center;">
        <h6 id="modalRelease" class="bg-light text-dark rounded-3 p-2 mt-1" style="display:flex;align-items:center;"></h6>
        <h6 id="modalRating" class="bg-light text-dark rounded-3 p-2 mt-1 ms-1" style="display:flex;align-items:center;"></h6>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" onclick="closebtn()"></button>
      </div>
      <div class="modal-body">
        <div class="container text-center">
          <div class="row" style="display:flex;justify-content:center;align-items:center;">
            <h1 id="modaltitle" class=" justify-content-center rounded-3 text-light p-2" style="background-color:#E50914 ;align-items:center; border: solid white 1px;"></h1>
        
            <div class="col modalcol">
              <img src="" alt="" class="modalimage img-fluid rounded-2" >
            </div>
            <div class="col modalcol">
              <div> <h3 class="text-light mt-2">OVERVIEW</h3>
              <p class="rounded-4 text-light p-2" id="modaloverview" style="background-color:#E50914 ;border: solid white 1px;"></p>
            </div>
            
              <div>
                <h3 class="text-light">CAST</h3>
              <p class="rounded-4 text-light p-2" id="castdetails" style="background-color:#E50914 ;border: solid white 1px;">
              <b id="cast1"></b> playing <b id="cast2"></b> <br><b id="cast3"></b> playing <b id="cast4"></b></p>
            </div>
           
            <iframe allowfullscreen class="d-none"
               src="" id="youtube">
            </iframe>
            <a class="btn btn-danger" href="" role="button" id="newpage" style="background-color:#E50914 ;">More Info</a>
          
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<button type="button" class="btn btn-primary d-none" data-bs-toggle="modal" data-bs-target="#exampleModal" id="btnsearch">

</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <ul class="list-group">
        <li class="list-group-item search-list" id="search-0" onclick="searchinfo(this.id)"></li>
        <li class="list-group-item search-list" id="search-1" onclick="searchinfo(this.id)"></li>
        <li class="list-group-item search-list" id="search-2" onclick="searchinfo(this.id)"></li>
        <li class="list-group-item search-list" id="search-3" onclick="searchinfo(this.id)"></li>
        <li class="list-group-item search-list" id="search-4" onclick="searchinfo(this.id)"></li>
      </ul>
    </div>
  </div>
</div>







  
 

   
